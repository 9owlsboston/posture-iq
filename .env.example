# PostureIQ — Configuration
#
# Copy this file to .env and fill in the values.
# NEVER commit .env to source control.

# ─── Azure OpenAI ──────────────────────────────────────────
AZURE_OPENAI_ENDPOINT=https://<your-resource>.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT=gpt-4o
AZURE_OPENAI_API_VERSION=2024-02-01
# Leave blank if using Managed Identity (recommended)
AZURE_OPENAI_API_KEY=

# ─── Azure AI Content Safety ──────────────────────────────
AZURE_CONTENT_SAFETY_ENDPOINT=https://<your-resource>.cognitiveservices.azure.com/
# Leave blank if using Managed Identity (recommended)
AZURE_CONTENT_SAFETY_KEY=

# ─── Microsoft Graph API ──────────────────────────────────
AZURE_TENANT_ID=<your-tenant-id>
AZURE_CLIENT_ID=<your-app-registration-client-id>
AZURE_CLIENT_SECRET=<your-client-secret>
# Scopes for delegated access
GRAPH_SCOPES=SecurityEvents.Read.All,SecurityActions.Read.All,InformationProtection.Read.All,Policy.Read.All,Reports.Read.All

# ─── Azure Application Insights ──────────────────────────
APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=<key>;IngestionEndpoint=https://<region>.in.applicationinsights.azure.com/

# ─── Azure Key Vault ──────────────────────────────────────
AZURE_KEYVAULT_URL=https://<your-vault>.vault.azure.net/

# ─── App Settings ─────────────────────────────────────────
LOG_LEVEL=INFO
ENVIRONMENT=development
PORT=8000
